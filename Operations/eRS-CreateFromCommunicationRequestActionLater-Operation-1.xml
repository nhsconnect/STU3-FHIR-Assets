<?xml version="1.0" encoding="UTF-8"?><OperationDefinition xmlns="http://hl7.org/fhir">	<url value="https://fhir.nhs.uk/STU3/OperationDefinition/eRS-CreateFromCommunicationRequestActionLater-Operation-1"/>	<version value="1.0.0"/>	<name value="eRS-CreateFromCommunicationRequestActionLater-Operation-1"/>	<status value="draft"/>	<kind value="operation"/>	<date value="2021-03-01T00:00:00+01:00"/>	<publisher value="NHS Digital"/>	<contact>		<name value="Interoperability Team"/>		<telecom>			<system value="email"/>			<value value="interoperabilityteam@nhs.net"/>			<use value="work"/>		</telecom>	</contact>	<description value="Provider creates Referral from Advice and Guidance Request."/>	<code value="ers.createFromCommunicationRequestActionLater"/>	<system value="false"/>	<type value="true"/>	<instance value="false"/>	<parameter>		<name value="createFrom"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="Identifies the Advice and Guidance Request that is to become a Referral"/>		<type value="CommunicationRequest"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-CommunicationRequest-1"/>		</profile>	</parameter>	<parameter>		<name value="guidance"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="Mandatory guidance which provides the referrer with notes on what action to take. Max 2000 characters."/>		<type value="string"/>	</parameter>	<parameter>		<name value="guidanceAttachmentFile"/>		<use value="in"/>		<min value="0"/>		<max value="*"/>		<documentation value="Optional logical reference to file(s) that will be associated with the newly created Referral. DocumentReference.type value should be GUIDANCE_RESPONSE."/>		<type value="Resource"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-DocumentReference-1"/>		</profile>	</parameter>	<parameter>		<name value="reviewComments"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="Mandatory note to be added to the newly created Referral. Will be visible to the person picking up the Referral. Max 2000 characters."/>		<type value="string"/>	</parameter>	<parameter>		<name value="reviewAttachmentFile"/>		<use value="in"/>		<min value="0"/>		<max value="*"/>		<documentation value="Optional logical reference to file(s) that will be associated with the newly created Referral. DocumentReference.type value should be PROVIDER."/>		<type value="Resource"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-DocumentReference-1"/>		</profile>	</parameter>	<parameter>		<name value="newReferralPriority"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="The Priority the created Referral should be set to."/>		<type value="Coding"/>		<binding>			<strength value="required"/>			<valueSetUri value="https://fhir.nhs.uk/STU3/ValueSet/eRS-Priority-1"/>		</binding>	</parameter>	<parameter>		<name value="return"/>		<use value="out"/>		<min value="1"/>		<max value="1"/>		<documentation value="The newly created Referral."/>		<type value="Resource"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-ReferralRequest-1"/>		</profile>	</parameter></OperationDefinition>