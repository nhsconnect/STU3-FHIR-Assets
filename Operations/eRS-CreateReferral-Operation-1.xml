<?xml version="1.0" encoding="utf-8"?>
<OperationDefinition xmlns="http://hl7.org/fhir">
  <url value="https://fhir.nhs.uk/STU3/OperationDefinition/eRS-CreateReferral-Operation-1" />
  <version value="1.0.1" />
  <name value="eRS-CreateReferral-Operation-1" />
  <status value="draft" />
  <kind value="operation" />
  <date value="2019-12-03T00:00:00+01:00" />
  <publisher value="NHS Digital" />
  <contact>
    <name value="Interoperability Team" />
    <telecom>
      <system value="email" />
      <value value="interoperabilityteam@nhs.net" />
      <use value="work" />
    </telecom>
  </contact>
  <description value="Create a referral for a patient." />
  <code value="ers.createReferral" />
  <system value="false" />
  <type value="true" />
  <instance value="false" />
  <parameter>
    <name value="patient" />
    <use value="in" />
    <min value="1" />
    <max value="1" />
    <documentation value="The NHS Number of the patient who the referral being created is for. Format: ^[0-9]{10}$" />
    <type value="Identifier" />
  </parameter>
  <parameter>
    <name value="referringClinician" />
    <use value="in" />
    <min value="0" />
    <max value="1" />
    <documentation value="Required if and only if the logged in user has a role of Referring Clinician Admin.    Format: ^[0-9]{12}$" />
    <type value="Identifier" />
  </parameter>
  <parameter>
    <name value="shortlist" />
    <use value="in" />
    <min value="1" />
    <max value="1" />
    <documentation value="A list of 1 to 20 services that will form the shortlist for the referral." />
    <type value="List" />
    <profile>
      <reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-Shortlist-List-1" />
    </profile>
  </parameter>
  <parameter>
    <name value="firstReminderFollowUpDays" />
    <use value="in" />
    <min value="1" />
    <max value="1" />
    <documentation value="If &gt; 0, the system will send an automated letter to the patient after the number of days stated, if the patient hasn't yet booked or deferred to a Service. If = 0, the system will not send reminder letters for this referral." />
    <type value="unsignedInt" />
  </parameter>
  <parameter>
    <name value="intentionToAddReferralLetter" />
    <use value="in" />
    <min value="1" />
    <max value="1" />
    <documentation value="Intention to add a referral letter." />
    <type value="Coding" />
    <binding>
      <strength value="required" />
      <valueSetUri value="https://fhir.nhs.uk/STU3/ValueSet/eRS-ReferralLetterIntention-1" />
    </binding>
  </parameter>
  <parameter>
    <name value="eReferralPathwayStart" />
    <use value="in" />
    <min value="0" />
    <max value="1" />
    <documentation value="The e-Referral Pathway Start Date is a derived value of when the Referral To Treatment (RTT) clock starts. You can supply an optional, alternate pathway start date when creating a referral. For more information see the e-RS FHIR API documentation." />
    <type value="Instant" />
  </parameter>
  <parameter>
    <name value="referral" />
    <use value="out" />
    <min value="1" />
    <max value="1" />
    <documentation value="The referral request that will be created." />
    <type value="ReferralRequest" />
    <profile>
      <reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-ReferralRequest-1" />
    </profile>
  </parameter>
</OperationDefinition>