	<kind value="operation"/>
	<date value="2019-04-15T00:00:00+01:00"/>
	<publisher value="NHS Digital"/>
	<contact>
		<name value="Interoperability Team"/>
		<telecom>
			<system value="email"/>
			<value value="interoperabilityteam@nhs.net"/>
			<use value="work"/>
		</telecom>
	</contact>
	<description value="Request to retrieve a healthcare service using patient specific details."/>
	<code value="ers.searchHealthcareServicesForPatient"/>
	<system value="false"/>
	<type value="true"/>
	<instance value="false"/>
	<parameter>
		<name value="patient"/>
		<use value="in"/>
		<min value="1"/>
		<max value="1"/>
		<documentation value="The NHS Number of the patient who the referral being created is for. Format: ^[0-9]{10}$"/>
		<type value="Identifier"/>
	</parameter>
	<parameter>
		<name value="requestType"/>
		<use value="in"/>
		<min value="1"/>
		<max value="1"/>
		<documentation value="Request Type"/>
		<type value="Coding"/>
		<binding>
			<strength value="required"/>
			<valueSetReference>
				<reference value="https://fhir.nhs.uk/STU3/ValueSet/eRS-RequestType-1"/>
			</valueSetReference>
		</binding>
	</parameter>
	<parameter>
		<name value="referringClinician"/>
		<use value="in"/>
		<min value="0"/>
		<max value="1"/>
		<documentation value="Required if and only if the logged in user has a role of Referring Clinician Admin. 
		Format: ^[0-9]{12}$"/>
		<type value="Identifier"/>
	</parameter>
	<parameter>
		<name value="searchCriteria"/>
		<use value="in"/>
		<min value="1"/>
		<max value="1"/>
		<documentation value="Search criteria"/>
		<profile>
			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-ServiceSearchCriteria-Parameters-1"/>
		</profile>
	</parameter>
	<parameter>
		<name value="restrictedeService"/>
		<use value="in"/>
		<min value="0"/>
		<max value="1"/>
		<documentation value="If provided, the endpoint will return information about the authorised pathway services for the restricted service indicated that are available to the user for the given search criteria."/>
		<type value="Reference"/>
	</parameter>
	<parameter>
		<name value="sortBy"/>
		<use value="in"/>
		<min value="1"/>
		<max value="1"/>
		<documentation value="Sort By"/>
		<type value="Coding"/>
		<binding>
			<strength value="required"/>
			<valueSetReference>
				<reference value="https://fhir.nhs.uk/STU3/ValueSet/eRS-SortBy-1"/>
			</valueSetReference>
		</binding>
	</parameter>
	<parameter>
		<name value="response"/>
		<use value="out"/>
		<min value="1"/>
		<max value="1"/>
		<documentation value="The List resource that has been returned in response to the given input parameters"/>
		<type value="List"/>
