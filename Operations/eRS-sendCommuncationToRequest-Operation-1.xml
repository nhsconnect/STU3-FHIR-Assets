<?xml version="1.0" encoding="UTF-8"?><OperationDefinition xmlns="http://hl7.org/fhir">	<url value="https://fhir.nhs.uk/STU3/OperationDefinition/eRS-sendCommuncationToRequest-Operation-1"/>	<version value="1.0.0"/>	<name value="eRS-sendCommuncationToRequest-Operation-1"/>	<status value="draft"/>	<kind value="operation"/>	<date value="2021-03-01T00:00:00+01:00"/>	<publisher value="NHS Digital"/>	<contact>		<name value="Interoperability Team"/>		<telecom>			<system value="email"/>			<value value="interoperabilityteam@nhs.net"/>			<use value="work"/>		</telecom>	</contact>	<description value="Provider Responds to Advice and Guidance Request."/>	<code value="ers.sendCommunicationToRequest"/>	<system value="false"/>	<type value="true"/>	<instance value="false"/>	<parameter>		<name value="guidance"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="Mandatory guidance which provides the referrer with notes on what action to take. Max 2000 characters."/>		<type value="string"/>	</parameter>	<parameter>		<name value="priority"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="The Priority the Advice and Guidance Request should be set to."/>		<type value="Coding"/>		<binding>			<strength value="required"/>			<valueSetUri value="https://fhir.nhs.uk/STU3/ValueSet/eRS-Priority-1"/>		</binding>	</parameter>	<parameter>		<name value="guidanceOutcome"/>		<use value="in"/>		<min value="1"/>		<max value="1"/>		<documentation value="Summary of action"/>		<type value="Coding"/>		<binding>			<strength value="required"/>			<valueSetUri value="https://fhir.nhs.uk/STU3/ValueSet/eRS-GuidanceResponseOutcome-1"/>		</binding>	</parameter>	<parameter>		<name value="guidanceIntendedRecommendation"/>		<use value="in"/>		<min value="0"/>		<max value="1"/>		<documentation value="Summary of advice given. Must only be provided if guidanceOutcome Code is RETURN_TO_REFERRER_WITH_ADVICE"/>		<type value="Coding"/>		<binding>			<strength value="required"/>			<valueSetUri value="https://fhir.nhs.uk/STU3/ValueSet/eRS-GuidanceIntendedRecommendation-1"/>		</binding>	</parameter>	<parameter>		<name value="guidanceAttachmentFile"/>		<use value="in"/>		<min value="0"/>		<max value="1"/>		<documentation value="Contains logical reference of file(s) to associate to the guidance response."/>		<type value="Resource"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-DocumentReference-1"/>		</profile>	</parameter>	<parameter>		<name value="createdCommunication"/>		<use value="out"/>		<min value="1"/>		<max value="1"/>		<documentation value="The newly created Communication"/>		<type value="Resource"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-Communication-1"/>		</profile>	</parameter>	<parameter>		<name value="updatedCommunicationRequest"/>		<use value="out"/>		<min value="1"/>		<max value="1"/>		<documentation value="The newly created Communication Request"/>		<type value="Resource"/>		<profile>			<reference value="https://fhir.nhs.uk/STU3/StructureDefinition/eRS-CommunicationRequest-1"/>		</profile>	</parameter></OperationDefinition>